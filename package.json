{
  "name": "vscode-movie",
  "displayName": "电影集",
  "description": "在 vscode 中查看电影/电视剧资讯。",
  "icon": "resource/icon.png",
  "version": "0.3.9",
  "engines": {
    "vscode": "^1.31.0"
  },
  "publisher": "axetroy",
  "categories": [
    "Other"
  ],
  "keywords": [
    "movie",
    "douban"
  ],
  "repository": "https://github.com/axetroy/vscode-movie",
  "activationEvents": [
    "onCommand:movie.online",
    "onCommand:movie.top250",
    "onCommand:movie.comming",
    "onCommand:movie.tv"
  ],
  "main": "./out/index.js",
  "contributes": {
    "commands": [
      {
        "command": "movie.online",
        "title": "%command.online.title%",
        "category": "movie"
      },
      {
        "command": "movie.top250",
        "title": "%command.top250.title%",
        "category": "movie"
      },
      {
        "command": "movie.comming",
        "title": "%command.comming.title%",
        "category": "movie"
      },
      {
        "command": "movie.tv",
        "title": "%command.tv.title%",
        "category": "movie"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "movie.online",
          "group": "movie"
        },
        {
          "command": "movie.top250",
          "group": "movie"
        },
        {
          "command": "movie.comming",
          "group": "movie"
        },
        {
          "command": "movie.tv",
          "group": "movie_tv"
        }
      ]
    },
    "configuration": {
      "title": "%ext.config.title%",
      "properties": {
        "movie.city": {
          "type": "string",
          "markdownDescription": "%ext.config.city%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rimraf ./out",
    "compile": "npm run clean && tsc -p ./ && npx @zeit/ncc build src/index.ts -o ./dist -e vscode -m && npm run clean && move-cli ./dist ./out",
    "watch": "tsc -watch -p ./",
    "lint": "tslint -p ./ -c tslint.json",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "changelog": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s -r 0",
    "publish": "npx vsce publish"
  },
  "devDependencies": {
    "@types/ejs": "2.6.3",
    "@types/fs-extra": "7.0.0",
    "@types/mocha": "5.2.6",
    "@types/node": "11.13.13",
    "move-cli": "1.2.1",
    "rimraf": "2.6.3",
    "tslint": "5.16.0",
    "typescript": "3.5.1",
    "vscode": "1.1.34"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "date-fns": "^1.30.1",
    "ejs": "^2.6.1",
    "fs-extra": "^8.0.0",
    "v-lazy-image": "^1.3.2",
    "vscode-nls-i18n": "^0.1.1"
  }
}
