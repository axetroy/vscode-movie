{
  "name": "vscode-movie",
  "displayName": "电影集",
  "description": "在vscode中查看热映电影和评分前250名的电影",
  "icon": "resource/icon.png",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.31.0"
  },
  "publisher": "axetroy",
  "categories": [
    "Other"
  ],
  "keywords": [
    "movie",
    "douban"
  ],
  "repository": "https://github.com/axetroy/vscode-movie",
  "activationEvents": [
    "onCommand:movie.online",
    "onCommand:movie.top250",
    "onCommand:movie.comming"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "movie.online",
        "title": "热映电影",
        "category": "movie"
      },
      {
        "command": "movie.top250",
        "title": "TOP250电影",
        "category": "movie"
      },
      {
        "command": "movie.comming",
        "title": "即将上映",
        "category": "movie"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "movie.online",
          "group": "movie"
        },
        {
          "command": "movie.top250",
          "group": "movie"
        },
        {
          "command": "movie.comming",
          "group": "movie"
        }
      ]
    },
    "configuration": {
      "title": "电影集",
      "properties": {
        "movie.city": {
          "type": "string",
          "markdownDescription": "当前所在城市。例如`北京`、`深圳`, 不包含`市`。如果为空，则使用IP定位城市"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "changelog": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@types/ejs": "^2.6.3",
    "@types/fs-extra": "^5.0.5",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "date-fns": "^1.30.1",
    "ejs": "^2.6.1",
    "fs-extra": "^7.0.1",
    "v-lazy-image": "^1.3.2"
  }
}
